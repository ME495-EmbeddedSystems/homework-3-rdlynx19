<robot name="buttercup" xmlns:xacro="http://www.ros.org/wiki/xacro">

<link name="base_link">
    <visual>
        <geometry>
            <box size="1.5 1.0 0.25"/>   
        </geometry>
        <material name="red_mat">
            <color rgba="1.0 0.0 0.0 1.0"/>    
        </material>
    </visual>
    <collision>
       <geometry>
            <box size="2.0 1.0 0.5"/>   
        </geometry>
        <material name="red_mat">
            <color rgba="1.0 0.0 0.0 1.0"/>    
        </material> 
    </collision>
</link>   

<link name="bottom_caster">
    <visual>
        <geometry>
            <sphere radius="0.2"/>
        </geometry>
        <material name="green_mat">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.2"/>
        </geometry>
        <material name="green_mat">
            <color rgba="0 0 1 1"/>
        </material>
    </collision>
</link>

<link name="top_caster">
    <visual>
        <geometry>
            <sphere radius="0.2"/>
        </geometry>
        <material name="green_mat">
            <color rgba="0 0 1 1"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <sphere radius="0.2"/>
        </geometry>
        <material name="green_mat">
            <color rgba="0 0 1 1"/>
        </material>
    </collision>
</link>

<link name="left_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.3" length="0.2"/>
        </geometry>
        <material name="blue_mat">
            <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.3" length="0.2"/>
        </geometry>
        <material name="blue_mat">
            <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
    </collision>
</link>

<link name="right_wheel">
    <visual>
        <geometry>
            <cylinder radius="0.3" length="0.2"/>
        </geometry>
        <material name="blue_mat">
            <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
    </visual>
    <collision>
        <geometry>
            <cylinder radius="0.3" length="0.2"/>
        </geometry>
        <material name="blue_mat">
            <color rgba="0.0 1.0 0.0 1.0"/>
        </material>
    </collision>
</link>



<joint name="bottom_caster_wheel" type="continuous">
    <origin xyz="0.5 0 -0.125" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="bottom_caster"/>
    <axis xyz="1 1 1"/>
</joint>

<joint name="top_caster_wheel" type="continuous">
    <origin xyz="0.5 0 0.125" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="top_caster"/>
    <axis xyz="1 1 1"/>
</joint>

<joint name="left_wheel_base" type="continuous">
    <origin xyz="-0.5 0.6 0" rpy="-1.57 0 0"/>
    <parent link="base_link"/>
    <child link="left_wheel"/>
    <axis xyz="0 0 1"/>
</joint>

<joint name="right_wheel_base" type="continuous">
    <origin xyz="-0.5 -0.6 0" rpy="1.57 0 0"/>
    <parent link="base_link"/>
    <child link="right_wheel"/>
    <axis xyz="0 0 1"/>
</joint>
</robot> 